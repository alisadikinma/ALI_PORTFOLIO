{
  "output_configuration": {
    "reports_directory": ".claude/outputs/reports",
    "analysis_directory": ".claude/outputs/analysis",
    "artifacts_directory": ".claude/outputs/artifacts",
    "cleanup_root": true,
    "timestamp_format": "YYYY-MM-DD_HH-mm-ss",
    "file_naming": {
      "comprehensive_audit": "comprehensive_audit_{timestamp}.md",
      "security_report": "security_report_{timestamp}.md",
      "code_review": "code_review_{timestamp}.md",
      "design_analysis": "design_analysis_{timestamp}.md",
      "performance_report": "performance_report_{timestamp}.md"
    }
  },
  "permissions": {
    "allow": [
      "Bash(claude mcp add:*)",
      "Bash(gh pr:*)",
      "Bash(php artisan route:list:*)",
      "Bash(php artisan:*)",
      "Bash(composer show:*)",
      "Bash(npm audit:*)",
      "mcp__playwright__browser_navigate",
      "mcp__playwright__browser_take_screenshot",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(where claude)",
      "Bash(claude auth login)",
      "Bash(code --version)",
      "mcp__playwright__browser_resize",
      "Bash(npm run build:*)",
      "Bash(curl:*)",
      "Bash(npx:*)",
      "Bash(find:*)",
      "Bash(npm run dev:*)",
      "Bash(node:*)",
      "Bash(dir)",
      "Bash(dir:*)",
      "Bash(php:*)",
      "Bash(npm install:*)",
      "Bash(chmod:*)",
      "Bash(cat:*)",
      "Bash(taskkill:*)",
      "Bash(vendor/bin/pint:*)",
      "Bash(start http://localhost:8000/validation_test.html)",
      "mcp__ide__executeCode"
    ],
    "deny": [],
    "ask": []
  }
}